@page
@model BoostStreamServer.Areas.Identity.Pages.Account.Administration.Manage.UsersModel
@{
}
<table class="table table-dark">
    <thead class="bg-info">
        <tr>
            <td>UserName</td>
            <td>RegistrationAt</td>
            <td>Access</td>
            <td>Изменить права</td>
            <td>Блокировка</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
        <tr>
            <td>@user.UserName</td>
            <td>@user.RegistrationAt</td>
            <td>@user.Token.Access</td>
            <td>
                <a asp-page="Access" asp-route-id="@user.Token.Id">
                    <button type="submit" class="btn btn-info">Изменить права</button>
                </a>
            </td>
            <td>
                <form method="post">
                    <div class="form-group">
                        @if (user.Banned)
                        {
                        <button type="submit" asp-page-handler="BanAccount" asp-route-id="@user.Id" class="btn btn-success">Разблокировать</button>
                        }
                        else
                        {
                        <button type="submit" asp-page-handler="BanAccount" asp-route-id="@user.Id" class="btn btn-danger">Заблокировать</button>
                        }
                    </div>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>